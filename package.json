{
  "name": "emptysetmono",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "patch-package",
    "deploy:fork:optimismGoerli": "concurrently \"yarn workspace @emptyset/reserve run node:fork:optimismGoerli --no-deploy > /dev/null\" \"./scripts/deploy_optimism_goerli_fork.sh\"",
    "deploy:optimismGoerli": "./scripts/deploy_optimism_goerli.sh",
    "deploy:fork:arbitrumGoerli": "concurrently \"yarn workspace @emptyset/reserve run node:fork:arbitrumGoerli --no-deploy > /dev/null\" \"./scripts/deploy_arbitrum_goerli_fork.sh\"",
    "deploy:arbitrumGoerli": "./scripts/deploy_arbitrum_goerli.sh",
    "deploy:fork:baseGoerli": "concurrently \"yarn workspace @emptyset/reserve run node:fork:baseGoerli --no-deploy > /dev/null\" \"./scripts/deploy_base_goerli_fork.sh\"",
    "deploy:baseGoerli": "./scripts/deploy_base_goerli.sh",
    "deploy:fork:arbitrum": "concurrently \"yarn workspace @emptyset/reserve run node:fork:arbitrum --no-deploy > /dev/null\" \"./scripts/deploy_arbitrum_fork.sh\"",
    "deploy:arbitrum": "./scripts/deploy_arbitrum.sh",
    "deploy:fork:optimism": "concurrently \"yarn workspace @emptyset/reserve run node:fork:optimism --no-deploy > /dev/null\" \"./scripts/deploy_optimism_fork.sh\"",
    "deploy:optimism": "./scripts/deploy_optimism.sh",
    "deploy:fork:base": "concurrently \"yarn workspace @emptyset/reserve run node:fork:base --no-deploy > /dev/null\" \"./scripts/deploy_base_fork.sh\"",
    "deploy:base": "./scripts/deploy_base.sh",
    "deploy:arbitrumSepolia": "./scripts/deploy_arbitrum_sepolia.sh"
  },
  "author": "",
