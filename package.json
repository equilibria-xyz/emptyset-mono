    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.{ts,.js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.json": "prettier --write"
  }
